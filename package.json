{
  "name": "giscus.app",
  "version": "0.0.0",
  "private": false,
  "browserslist": [
    ">0.3%",
    "not ie 11",
    "not dead",
    "not op_mini all"
  ],
  "packageManager": "pnpm@6.32.8",
  "scripts": {
    "cscript": "tsc client.ts --outDir public",
    "cthemes": "postcss src/styles/themes/*.css --dir public/themes --config src/styles/themes",
    "mscript": "curl -d output_info=compiled_code --data-urlencode js_code@public/client.js https://closure-compiler.appspot.com/compile -o public/client.js",
    "dev:next": "next dev",
    "dev:client": "pnpm cscript --watch --preserveWatchOutput",
    "dev:themes": "pnpm cthemes --watch",
    "dev": "run-p dev:*",
    "build:client": "pnpm cscript && pnpm mscript",
    "build:themes": "pnpm cthemes",
    "build:next": "next build",
    "build": "run-s build:*",
    "start": "next start",
    "lint": "eslint . --cache && stylelint **/*.css",
    "lint:fix": "eslint --fix . --cache && stylelint **/*.css",
    "format": "prettier --check ./src/**/*.{ts,tsx,css,json}",
    "format:fix": "prettier --write ./src/**/*.{ts,tsx,css,json}"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "env": {
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "next/core-web-vitals",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "@next/next/no-img-element": "off"
    },
    "globals": {
      "React": "writable"
    },
    "overrides": [
      {
        "files": [
          "*.ts",
          "*.tsx"
        ],
        "extends": [
          "plugin:@typescript-eslint/recommended"
        ],
        "rules": {
          "@typescript-eslint/explicit-module-boundary-types": "off",
          "@typescript-eslint/no-explicit-any": "off"
        }
      }
    ],
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "ignorePatterns": [
      "public/client.js",
      "public/js/iframeResizer.contentWindow.min.js",
      "public/js/iframeResizer.min.js"
    ]
  },
  "eslintIgnore": [
    ".next",
    "node_modules",
    "public",
    "*.md",
    ".github"
  ],
  "prettier": {
    "printWidth": 100,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "useTabs": false,
    "tabWidth": 2,
    "quoteProps": "consistent",
    "arrowParens": "avoid"
  },
  "dependencies": {
    "@peculiar/webcrypto": "^1.3.3",
    "@primer/octicons-react": "^17.0.0",
    "@primer/react": "^35.2.0",
    "jsonwebtoken": "^8.5.1",
    "next": "^12.1.5",
    "next-translate": "^1.4.0",
    "preact": "^10.7.1",
    "react": "18.0.0",
    "react-dom": "18.0.0",
    "styled-components": "^5.3.5",
    "swr": "^1.3.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.22.0",
    "@next/bundle-analyzer": "^12.1.5",
    "@prefresh/next": "^1.5.2",
    "@types/jsonwebtoken": "^8.5.7",
    "@types/node": "^17.0.25",
    "@types/react": "^18.0.5",
    "@types/tailwindcss": "^3.0.10",
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "@typescript-eslint/parser": "^5.20.0",
    "autoprefixer": "^10.4.4",
    "cssnano": "^5.1.7",
    "eslint": "^8.13.0",
    "eslint-config-next": "^12.1.5",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.4.0",
    "npm-run-all": "^4.1.5",
    "pnpm": "^6.32.9",
    "postcss": "^8.4.12",
    "postcss-cli": "^9.1.0",
    "postcss-import": "^14.1.0",
    "prettier": "^2.6.2",
    "react-is": ">=16.8.0",
    "stylelint": "^14.7.0",
    "stylelint-config-standard": "^25.0.0",
    "tailwindcss": "^3.0.24",
    "typescript": "^4.6.3",
    "webpack": "^5.72.0"
  }
}
